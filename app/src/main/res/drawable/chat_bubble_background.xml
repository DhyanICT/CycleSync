<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="16dp"
        android:left="16dp"
        android:right="16dp"
        android:top="16dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorPrimary" />
            </shape>
        </rotate>
    </item>

    <item
        android:bottom="16dp"
        android:left="32dp"
        android:right="0dp"
        android:top="16dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary" /> <!-- Bubble background color -->
            <corners android:radius="8dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
</layer-list>
